{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["ESNext", "DOM"],
    "module": "NodeNext",
    "noEmit": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "outDir": "./dist",
    "declaration": true
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "src"
  ]
}
